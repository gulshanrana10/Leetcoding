void merge(int arr1[], int arr2[], int n, int m) {
	    priority_queue<int,vector<int>,greater<int>> pq;
	    for(int i=0;i<n;i++){
	      pq.push(arr1[i]);
	      
	    }
	    for(int i=0;i<m;i++){
	      pq.push(arr2[i]);
	      
	    }
	    for(int i=0;i<n;i++){
	        arr1[i]=pq.top();
	        pq.pop();}
	    for(int i=0;i<m;i++){
	        arr2[i]=pq.top();
	        pq.pop();}
	    
	}
